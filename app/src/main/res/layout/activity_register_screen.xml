<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arpithasomayaji.chatroomapplication.LoginScreen.LoginScreen"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/email_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:text="Enter your Email ID"
            android:textSize="15dp"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/email_registerscreen"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_padding"
            android:background="@drawable/shapes2"
            android:inputType="text"
            android:maxLines="1"
            android:text="" />

        <TextView
            android:id="@+id/username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:text="Name"
            android:textSize="15dp"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/username_registerscreen"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_padding"
            android:background="@drawable/shapes2"
            android:inputType="text"
            android:maxLines="1"
            android:text="" />

        <TextView
            android:id="@+id/password_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:text="Password"
            android:textSize="15dp"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/password_registerscreen"
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_padding"

            android:background="@drawable/shapes2"
            android:inputType="textPassword"
            android:maxLines="1"
            android:text="" />

        <TextView
            android:id="@+id/retypepassword_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_padding"
            android:text="Re-Enter Password"
            android:textSize="15dp"
            tools:textStyle="bold" />

        <EditText
            android:id="@+id/repassword_registerscreen"
            android:layout_width="500px"

            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xsmall_padding"
            android:background="@drawable/shapes2"
            android:inputType="textPassword"
            android:maxLines="1"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pattern"
            android:gravity="top|center"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/register_registerscreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonshape"
                android:text="Register"
                android:textColor="#ffffff" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
